<Window x:Class="AudiPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AudiPlayer" 
        Height="420" 
        Width="240"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style x:Key="iPodButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Always on Top" x:Name="AlwaysOnTopMenuItem" IsCheckable="True" IsChecked="True" Click="AlwaysOnTopMenuItem_Click"/>
            <MenuItem Header="Customize Stickers" Click="CustomizeStickersMenuItem_Click"/>
            <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
            <Separator/>
            <MenuItem Header="Hide Widget" Click="HideMenuItem_Click"/>
            <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <!-- Outer shadow for 3D effect -->
        <Border x:Name="OuterShadow"
                CornerRadius="18"
                Margin="5">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                Direction="315" 
                                ShadowDepth="6" 
                                Opacity="0.4" 
                                BlurRadius="12"/>
            </Border.Effect>

            <!-- Main iPod Body with 3D beveled effect -->
            <Border x:Name="iPodBody"
                    CornerRadius="18" 
                    BorderThickness="3"
                    Padding="12">
                <Border.Background>
                    <LinearGradientBrush x:Name="iPodBodyGradient" StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#F8F8F8" Offset="0"/>
                        <GradientStop Color="#E0E0E0" Offset="0.5"/>
                        <GradientStop Color="#D8D8D8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B8B8B8" Offset="0"/>
                        <GradientStop Color="#888888" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <!-- Inner highlight for 3D effect -->
                <Border.Effect>
                    <DropShadowEffect Color="White" 
                                    Direction="135" 
                                    ShadowDepth="1" 
                                    Opacity="0.8" 
                                    BlurRadius="3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Screen Section with inset shadow -->
                    <Border x:Name="ScreenBorder"
                            Grid.Row="0" 
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="8"
                            Margin="0,0,0,8">
                        <Border.Background>
                            <LinearGradientBrush x:Name="ScreenBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FAFAFA" Offset="0"/>
                                <GradientStop Color="#F0F0F0" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#888888" Offset="0"/>
                                <GradientStop Color="#AAAAAA" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <!-- Inset shadow for screen depth -->
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                            Direction="135" 
                                            ShadowDepth="2" 
                                            Opacity="0.3" 
                                            BlurRadius="4"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Now Playing Layout (Classic iPod style) -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Album Art (Compact) -->
                                <Border Grid.Column="0" 
                                        Width="85" 
                                        Height="85" 
                                        VerticalAlignment="Top"
                                        Margin="0,5,5,0"
                                        CornerRadius="4"
                                        BorderThickness="1"
                                        BorderBrush="#CCCCCC">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" 
                                                        Direction="315" 
                                                        ShadowDepth="2" 
                                                        Opacity="0.2" 
                                                        BlurRadius="4"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Border Background="#E8E8E8" 
                                                CornerRadius="3">
                                            <TextBlock Text="â™ª" 
                                                     FontSize="40" 
                                                     Foreground="#CCCCCC"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        <Image x:Name="AlbumArt" 
                                               Stretch="UniformToFill">
                                            <Image.Clip>
                                                <RectangleGeometry RadiusX="3" RadiusY="3" Rect="0,0,85,85"/>
                                            </Image.Clip>
                                        </Image>
                                    </Grid>
                                </Border>

                                <!-- Track Info (More space, better visibility) -->
                                <StackPanel Grid.Column="1" 
                                           VerticalAlignment="Top" 
                                           Margin="0,5,0,0">
                                    <TextBlock x:Name="TrackName" 
                                               Text="Not Playing"
                                               Foreground="#000000"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               TextAlignment="Left"
                                               TextWrapping="Wrap"
                                               MaxHeight="34"
                                               Margin="0,0,0,4"/>
                                    <TextBlock x:Name="ArtistName" 
                                               Text="Select a song"
                                               Foreground="#666666"
                                               FontSize="10"
                                               TextAlignment="Left"
                                               TextWrapping="Wrap"
                                               MaxHeight="30"
                                               Margin="0,0,0,4"/>
                                    <TextBlock x:Name="AlbumName" 
                                               Text="Album"
                                               Foreground="#888888"
                                               FontSize="9"
                                               TextAlignment="Left"
                                               TextWrapping="Wrap"
                                               MaxHeight="20"/>
                                </StackPanel>
                            </Grid>

                            <!-- Playback Controls -->
                            <StackPanel Grid.Row="1" 
                                       Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,6">
                                <Button x:Name="ShuffleButton" 
                                        Content="ðŸ”€" 
                                        Style="{StaticResource ControlButton}"
                                        Click="ShuffleButton_Click"
                                        ToolTip="Shuffle"
                                        Margin="0,0,6,0"/>
                                <Button x:Name="PrevButton" 
                                        Content="â®" 
                                        Style="{StaticResource ControlButton}"
                                        Click="PreviousButton_Click"
                                        Margin="0,0,3,0"/>
                                <Button x:Name="PlayPauseBtn" 
                                        Content="â–¶" 
                                        Style="{StaticResource ControlButton}"
                                        Click="PlayPauseButton_Click"
                                        FontSize="18"
                                        Margin="0,0,3,0"/>
                                <Button x:Name="NextBtn" 
                                        Content="â­" 
                                        Style="{StaticResource ControlButton}"
                                        Click="NextButton_Click"
                                        Margin="0,0,6,0"/>
                                <Button x:Name="RepeatButton" 
                                        Content="ðŸ”" 
                                        Style="{StaticResource ControlButton}"
                                        Click="RepeatButton_Click"
                                        ToolTip="Repeat"/>
                            </StackPanel>

                            <!-- Progress Bar -->
                            <Grid Grid.Row="2" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="CurrentTimeText" 
                                           Grid.Column="0"
                                           Text="0:00" 
                                           FontSize="8" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="0,0,4,0"/>

                                <Border Grid.Column="1"
                                        x:Name="ProgressBarBackground"
                                        Height="4" 
                                        Background="#E0E0E0"
                                        CornerRadius="2"
                                        VerticalAlignment="Center">
                                    <Border x:Name="ProgressBarFill"
                                            CornerRadius="2"
                                            HorizontalAlignment="Left"
                                            Width="0">
                                        <Border.Background>
                                            <LinearGradientBrush x:Name="ProgressBarGradient" StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#1ED760" Offset="0"/>
                                                <GradientStop Color="#1ABC54" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                </Border>

                                <TextBlock x:Name="TotalTimeText" 
                                           Grid.Column="2"
                                           Text="0:00" 
                                           FontSize="8" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </Grid>

                            <!-- Volume Control -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="ðŸ”Š" 
                                           FontSize="10" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="0,0,4,0"/>

                                <Slider Grid.Column="1"
                                        x:Name="VolumeSlider"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="50"
                                        VerticalAlignment="Center"
                                        ValueChanged="VolumeSlider_ValueChanged"/>

                                <TextBlock Grid.Column="2"
                                           x:Name="VolumeText" 
                                           Text="50%" 
                                           FontSize="8" 
                                           Foreground="#666666"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"
                                           Width="25"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Click Wheel -->
                    <Grid Grid.Row="1">
                        <Ellipse x:Name="ClickWheel"
                                 Width="130" 
                                 Height="130" 
                                 StrokeThickness="2">
                            <Ellipse.Fill>
                                <RadialGradientBrush x:Name="ClickWheelGradient">
                                    <GradientStop Color="#F5F5F5" Offset="0"/>
                                    <GradientStop Color="#D8D8D8" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#999999" Offset="0"/>
                                    <GradientStop Color="#777777" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>

                        <Ellipse x:Name="ClickWheelCenter"
                                 Width="50" 
                                 Height="50" 
                                 StrokeThickness="1"
                                 Stroke="#AAAAAA">
                            <Ellipse.Fill>
                                <RadialGradientBrush x:Name="ClickWheelCenterGradient">
                                    <GradientStop Color="#F0F0F0" Offset="0"/>
                                    <GradientStop Color="#D0D0D0" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Grid Width="130" Height="130">
                            <Button x:Name="MenuButton" 
                                    Content="MENU"
                                    Width="40" 
                                    Height="18"
                                    Style="{StaticResource iPodButton}"
                                    FontSize="7"
                                    Click="MenuButton_Click"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center"
                                    Margin="0,8,0,0"/>

                            <Button x:Name="PreviousButton" 
                                    Width="18" 
                                    Height="40"
                                    Style="{StaticResource iPodButton}"
                                    Click="PreviousButton_Click"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="8,0,0,0">
                                <TextBlock Text="â®" FontSize="12"/>
                            </Button>

                            <Button x:Name="NextButton" 
                                    Width="18" 
                                    Height="40"
                                    Style="{StaticResource iPodButton}"
                                    Click="NextButton_Click"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,8,0">
                                <TextBlock Text="â­" FontSize="12"/>
                            </Button>

                            <Button x:Name="PlayPauseButton" 
                                    Content="â–¶/â¸"
                                    Width="40" 
                                    Height="18"
                                    Style="{StaticResource iPodButton}"
                                    FontSize="7"
                                    Click="PlayPauseButton_Click"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,8"/>

                            <Button x:Name="CenterButton" 
                                    Content="âº"
                                    Width="50" 
                                    Height="50"
                                    Style="{StaticResource iPodButton}"
                                    FontSize="10"
                                    Click="CenterButton_Click"/>
                        </Grid>
                    </Grid>

                    <!-- Customizable Stickers Canvas -->
                    <Canvas x:Name="StickersCanvas" 
                            Grid.Row="0" 
                            Grid.RowSpan="2"
                            IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
